{
  "name": "rs-app-react",
  "private": true,
  "version": "0.0.0",
  "homepage": "https://sekaa4.github.io/RS-App-React/",
  "type": "module",
  "scripts": {
    "make:redirects": "echo /* /index.html 200 > dist/_redirects",
    "start": "vite",
    "dev": "ts-node server.ts",
    "build": "tsc --noEmit && npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/ServerApp.tsx --outDir dist/server",
    "preview": "vite preview",
    "test:clean": "npx rimraf coverage && npx rimraf .nyc_output",
    "test:unit": "vitest --reporter=verbose",
    "coverage": "vitest run --coverage --reporter=verbose",
    "cy:report": "npx nyc report && npx nyc report --reporter=text-summary",
    "cy:open-e2e": "cypress open --e2e --browser chrome",
    "cy:open-unit": "cypress open --component --browser chrome",
    "cy:run-e2e": "cypress run --e2e",
    "cy:run-unit": "npm run test:clean && cypress run --component && npm run cy:report",
    "test:e2e": "npm run test:clean && start-server-and-test dev http://localhost:5173 cy:run-e2e && npm run cy:report",
    "lint": "eslint src/",
    "lint:write": "eslint src/ --fix",
    "prettier": "npx prettier --write ./",
    "deploy": "npm run build && npx gh-pages -d dist"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.3",
    "@types/react-redux": "^7.1.25",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.8",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.8.2",
    "sirv": "^2.0.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.4",
    "@cypress/react18": "^2.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/compression": "^1.7.2",
    "@types/cypress__code-coverage": "^3.10.0",
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.12",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.2",
    "@vitest/coverage-istanbul": "^0.29.2",
    "cross-env": "^7.0.3",
    "cypress": "^12.10.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.2",
    "msw": "^1.2.1",
    "prettier": "^2.8.4",
    "rimraf": "^5.0.0",
    "sass": "^1.59.3",
    "start-server-and-test": "^2.0.0",
    "typescript": "^4.9.3",
    "typescript-plugin-css-modules": "^4.2.3",
    "vite": "^4.1.0",
    "vite-plugin-istanbul": "^4.0.1",
    "vite-tsconfig-paths": "^4.0.5",
    "vitest": "^0.29.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,ts,tsx,jsx}": [
      "npm run lint:write",
      "git add"
    ]
  }
}
